import java.util.Scanner;

public class Ifelse {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Get user's age
        System.out.print("Enter your age: ");
        int age = sc.nextInt();

        if (age >= 18) {
            // Eligible by age
            System.out.print("Do you have a valid ID? (y/n): ");
            char hasID = sc.next().charAt(0);

            if (hasID == 'y' || hasID == 'Y') {
                System.out.println("You are eligible and have valid ID.");
            } else {
                System.out.println("You are eligible but missing valid ID.");
            }
        } else {
            // Not eligible by age
            System.out.println("You are not eligible.");
        }

        sc.close();
    }
}
